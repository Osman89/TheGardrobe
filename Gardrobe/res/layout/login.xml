<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="30dp"
    android:background="@drawable/milla2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etSifre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/grey_gradient"
            android:ems="10"
            android:textColor="#ee2c2c"
            android:textSize="15dp"
            android:hint="Şifre"
            android:inputType="textVisiblePassword" />

        <EditText
            android:id="@+id/etEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etSifre1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/grey_gradient"
            android:ems="10"
            android:textSize="15dp"
            android:textColor="#ee2c2c"
            android:hint="Eposta"
            android:inputType="textEmailAddress" >

        </EditText>

        <Button
            android:id="@+id/bLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etSifre1"
            android:layout_marginTop="45dp"
            android:background="@drawable/red_button"
            android:text="Giriş"
            android:textColor="#dddddd"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etSifre1"
            android:text="Şifreyi Göster"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_above="@+id/etEmail1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="42dp"
            android:src="@drawable/thegardrobe_2" />

        <Button
            android:id="@+id/bRegister"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/bLogin"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_button"
            android:text="Kayıt Ol"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
