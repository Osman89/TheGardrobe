<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_back"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/red_gradient" />

    <Button
        android:id="@+id/back_home5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/home1" />

    <Button
        android:id="@+id/massage5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/message1" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/thegardrobebeyaz" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lProfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/post_border_style"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/post_background_style"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/ivPResim"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="20dp"
                                android:maxHeight="80dp"
                                android:maxWidth="80dp"
                                android:src="@drawable/profile2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvPAd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:text="TheGardrobe"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#ee2c2c" />

                            <TextView
                                android:id="@+id/tvPDogum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="GG/AA/YYYY"
                                android:textColor="#0f0f0f" />

                            <TextView
                                android:id="@+id/tvPSehir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Ankara"
                                android:textColor="#0f0f0f" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/lScroll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/post_border_style"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/box1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/post_background_style"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="215dp"
                            android:layout_height="320dp"
                            android:clickable="true"
                            android:src="@drawable/milla1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/post_border_style"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/box2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/post_background_style"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="215dp"
                            android:layout_height="320dp"
                            android:clickable="true"
                            android:src="@drawable/self" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/post_border_style"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/box3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/post_background_style"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="215dp"
                            android:layout_height="320dp"
                            android:clickable="true"
                            android:src="@drawable/gardrop" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <SlidingDrawer
        android:id="@+id/sdDugmeler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="300dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="vertical" >

        <Button
            android:id="@+id/handle"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:background="@drawable/thegardrobe_slider" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grey_gradient"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_gradient"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bAyarlar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/settings" />

                <Button
                    android:id="@+id/bTakipci"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fallower" />

                <Button
                    android:id="@+id/bTakipEdilen"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fallowing" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/grey_gradient"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvAyarlar"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Ayarlar"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tvTakipci"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="TakipÃ§iler"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tvTakip"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Takip Edilenler"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </SlidingDrawer>

</RelativeLayout>